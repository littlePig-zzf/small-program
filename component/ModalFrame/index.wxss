/** 模态 **/
.modal-mask{
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 97;
  background-color: rgba(0,0,0,0.30);
}
.modal-layer {
  position: fixed;
  display: table;
  z-index: 5000;
  width: 80%;
  max-width: 300px;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  text-align: center;
  border-radius: 3px;
  overflow: hidden;
  /* background: #fff; */
}
