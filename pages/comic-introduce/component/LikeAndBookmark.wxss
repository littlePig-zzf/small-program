.tool-default-set {
  position: relative;
  display: inline-block;
  text-align: left;
}
.icon {
  width: 40rpx;
  vertical-align: bottom
}
.icon-text {
  padding-left: 20rpx;
  padding-right: 36rpx;
  color: #3B3B3B;
  font-size: 24rpx;
}
.red-txt .icon-text {
  color: #fe7276;
}
.tool-default-set:first-child {
   border-right: 1px dashed #9e9e9e;
}
.tool-default-set:first-child .icon-text {
  display: inline-block;
  width: 72rpx;
}
.tool-default-set:nth-child(2) {
  padding-left: 35rpx;
}
